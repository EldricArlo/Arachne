{
  "name": "video-downloader",
  "version": "1.0.0",
  "description": "A modern video downloader based on yt-dlp and ffmpeg",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "video",
    "downloader",
    "yt-dlp",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.3"
  },
  "build": {
    "appId": "com.yourname.aurora.downloader",
    "productName": "Aurora Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "electron/**/*",
      "backend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin"
      },
      {
        "from": "python-win",
        "to": "python-win"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}